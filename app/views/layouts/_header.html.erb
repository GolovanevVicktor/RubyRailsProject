<header class="navbar navbar-fixed-top navbar-inverse" id="top_menu">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Hotel App", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Main board", root_path %></li>
          <li><%= link_to "List of hotels", listOfHotels_path %></li>
          <% if signed_in? %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Add hotel", '/hotels/new' %></li>
                <li><%= link_to "Settings", '#' %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
            <li><%= link_to "Sign up now!", signup_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>